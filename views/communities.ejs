<body>
    <h1><a href="/adminpanel/home" style="text-decoration: none; color: white; cursor: pointer;">COMMUNITY</a> </h1>
    <div class="feed">
        <% communities.forEach(community=>{ %>
            <% var comId=community.id%>
        <div class="card" >
            <div class="card-body">
              <h2 class="card-title"><%=community.name%> &nbsp;&nbsp;
                <i class="fas fa-edit" onclick="editpost('<%=community.id%>')" style="font-size:24px; color:#0492c2"></i>&nbsp;<i class="fas fa-trash" onclick="deletepost('<%=community.id%>')" style="font-size:24px; color:#b01030"></i></h2>
              <br>
              <div class="cardRight">
                  <img class="profilePhoto" src=<%=community.photo%>>
              </div>
              <div class="cardLeft">
                  <div class="cardContent">
                   
                <p class="card-text"><strong>ADMIN :</strong>
                    <% community.admin.forEach(admin=>{%>
                        <%=admin%>&nbsp;&nbsp;
                </span>
            <%})%>
                    </p>

                <p class="card-text"><strong>DESCRIPTION :</strong> <%=community.description%></p>
                <p class="card-text"><strong>MESSAGES :</strong> <%=community.ischatable%></p>
                <p class="card-text"><strong>POSTS :</strong> <%=community.ispostable%></p>
            </div>
            </div>
          
            </div>
        </div>
        <%}); %> 
    </div>
    
</body>
