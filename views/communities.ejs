    function editpost(id){
        window.location.href = ( "/adminpanel/communities/"+id);
    }
    function deletepost(id){
       
        const url="/apic/community/delete/"+id;

    window.location.href = ( "/apic/community/delete/"+id);
}

</script>
</html>